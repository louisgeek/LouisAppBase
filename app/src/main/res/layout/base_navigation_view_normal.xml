<?xml version="1.0" encoding="utf-8"?>
<!-- 侧滑菜单 也可以自定义布局   android:layout_gravity="start"定义显示位置
       headerLayout 左侧的head布局
       -->
<android.support.design.widget.NavigationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_navigation_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:headerLayout="@layout/base_navigation_view_headerlayout_normal"
    app:menu="@menu/base_navigation_view_menu_normal"
    />