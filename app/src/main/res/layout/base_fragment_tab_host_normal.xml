<?xml version="1.0" encoding="utf-8"?>
<!--另一种FragmentTabHost布局方式见：https://code.csdn.net/snippets/1958337-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <com.louisgeek.louisappbase.custom.FragmentTabHostUnDestroyFragmentSupport
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!-- tab选项卡的内容 ，宽度要填满，高度自动适应 -->
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <!-- 调换framelayout和tabwidget的前后顺序可以分别实现tab的top和在底下的效果 -->
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </TabWidget>
        </LinearLayout>
    </com.louisgeek.louisappbase.custom.FragmentTabHostUnDestroyFragmentSupport>
    <!-- center操作按钮 -->
    <ImageView
        android:id="@+id/id_iv_main_center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null"
        android:visibility="gone"
        android:src="@mipmap/fang" />

</RelativeLayout>